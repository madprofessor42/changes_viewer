{
  "name": "changes-viewer",
  "displayName": "Changes Viewer",
  "description": "Local history provider for VS Code - automatically tracks file changes",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "mocha --require ts-node/register 'src/**/*.test.ts'",
    "test:storage": "mocha --require ts-node/register 'src/services/__tests__/StorageService.test.ts'"
  },
  "contributes": {
    "commands": [
      {
        "command": "changes-viewer.restore",
        "title": "Restore File from Snapshot",
        "category": "Changes Viewer",
        "icon": "$(reply)"
      },
      {
        "command": "changes-viewer.accept",
        "title": "Accept Change",
        "category": "Changes Viewer",
        "icon": "$(check)"
      },
      {
        "command": "changes-viewer.diff",
        "title": "Compare with Current Version",
        "category": "Changes Viewer",
        "icon": "$(diff)"
      },
      {
        "command": "changes-viewer.showDetails",
        "title": "Show Snapshot Details",
        "category": "Changes Viewer",
        "icon": "$(info)"
      },
      {
        "command": "changes-viewer.clearSnapshots",
        "title": "Clear Old Snapshots",
        "category": "Changes Viewer"
      },
      {
        "command": "changes-viewer.diffWithLastApproved",
        "title": "Show Changes Since Last Approve",
        "category": "Changes Viewer"
      },
      {
        "command": "changes-viewer.approveAllChanges",
        "title": "Approve All Changes",
        "category": "Changes Viewer",
        "icon": "$(check-all)"
      },
      {
        "command": "changes-viewer.deleteAllSnapshots",
        "title": "Delete All Snapshots",
        "category": "Changes Viewer",
        "icon": "$(trash)"
      },
      {
        "command": "changes-viewer.enableUnapprovedFilter",
        "title": "Show Only Unapproved Files",
        "category": "Changes Viewer",
        "icon": "$(filter)"
      },
      {
        "command": "changes-viewer.disableUnapprovedFilter",
        "title": "Show All Files",
        "category": "Changes Viewer",
        "icon": "$(filter-filled)"
      },
      {
        "command": "changes-viewer.deleteSnapshot",
        "title": "Delete Snapshot",
        "category": "Changes Viewer",
        "icon": "$(trash)"
      },
      {
        "command": "changes-viewer.deleteFileSnapshots",
        "title": "Delete All Snapshots for File",
        "category": "Changes Viewer",
        "icon": "$(trash)"
      },
      {
        "command": "changes-viewer.openFile",
        "title": "Open File",
        "category": "Changes Viewer",
        "icon": "$(go-to-file)"
      },
      {
        "command": "changes-viewer.discardAllChanges",
        "title": "Discard All Changes (Revert to Stable)",
        "category": "Changes Viewer",
        "icon": "$(discard)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "changes-viewer-container",
          "title": "Changes Viewer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "changes-viewer-container": [
        {
          "id": "changes-viewer-view",
          "name": "Tracked Files"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "changes-viewer.enableUnapprovedFilter",
          "when": "view == changes-viewer-view && !changes-viewer.filterUnapprovedActive",
          "group": "navigation"
        },
        {
          "command": "changes-viewer.disableUnapprovedFilter",
          "when": "view == changes-viewer-view && changes-viewer.filterUnapprovedActive",
          "group": "navigation"
        },
        {
          "command": "changes-viewer.deleteAllSnapshots",
          "when": "view == changes-viewer-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "changes-viewer.openFile",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.fileItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.discardAllChanges",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.fileItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.approveAllChanges",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.fileItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.deleteFileSnapshots",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.fileItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.restore",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.snapshotItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.deleteSnapshot",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.snapshotItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.showDetails",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.snapshotItem",
          "group": "inline"
        },
        {
          "command": "changes-viewer.diff",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.snapshotItem",
          "group": "1_actions"
        },
        {
          "command": "changes-viewer.accept",
          "when": "view == changes-viewer-view && viewItem == changes-viewer.snapshotItem",
          "group": "1_actions"
        }
      ]
    },
    "configuration": {
      "title": "Changes Viewer",
      "properties": {
        "changes-viewer.typingDebounce": {
          "type": "number",
          "default": 2000,
          "description": "Debounce time in milliseconds for creating snapshots when typing text. Prevents creating too many snapshots during active editing.",
          "minimum": 100,
          "maximum": 60000
        },
        "changes-viewer.fileSystemDebounce": {
          "type": "number",
          "default": 1000,
          "description": "Debounce time in milliseconds for FileSystemWatcher. Prevents creating snapshots too frequently when files are modified externally.",
          "minimum": 100,
          "maximum": 60000
        },
        "changes-viewer.maxSnapshotsPerFile": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of snapshots to keep per file. Older snapshots will be automatically removed when this limit is reached.",
          "minimum": 1,
          "maximum": 10000
        },
        "changes-viewer.maxStorageSize": {
          "type": "number",
          "default": 524288000,
          "description": "Maximum storage size in bytes for all snapshots (default: 500 MB). When this limit is reached, oldest snapshots will be removed.",
          "minimum": 1048576,
          "maximum": 10737418240
        },
        "changes-viewer.ttlDays": {
          "type": "number",
          "default": 90,
          "description": "Time To Live in days for automatic cleanup of old snapshots. Snapshots older than this will be automatically removed.",
          "minimum": 1,
          "maximum": 3650
        },
        "changes-viewer.maxFileSize": {
          "type": "number",
          "default": 52428800,
          "description": "Maximum file size in bytes (default: 50 MB) for creating snapshots. Files larger than this will not be tracked.",
          "minimum": 1024,
          "maximum": 1073741824
        },
        "changes-viewer.enableCompression": {
          "type": "boolean",
          "default": true,
          "description": "Enable compression for large files. When enabled, snapshots of files larger than the compression threshold will be compressed to save storage space."
        },
        "changes-viewer.compressionThreshold": {
          "type": "number",
          "default": 10485760,
          "description": "File size threshold in bytes (default: 10 MB) for applying compression. Files larger than this threshold will be compressed when compression is enabled.",
          "minimum": 1024,
          "maximum": 1073741824
        },
        "changes-viewer.enableVerboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging (DEBUG level) for debugging and monitoring. When enabled, detailed debug messages will be logged to the Output Channel."
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.64.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
